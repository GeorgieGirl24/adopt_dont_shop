<h1>Adopt Don't Shop</h1><br>
<h2>All pets in  <%= link_to "#{@shelter.name}", "/shelters/#{@shelter.id}" %></h2><br>
<% @pets.each do |pet| %>
  <%= image_tag(pet.image) %>
  <h2>Pet: <%= link_to "#{pet.name}", "/pets/#{pet.id}" %></h2>
  <p>Approximate Age: <%= pet.approximate_age %></p>
  <p>Sex: <%= pet.sex %> </p>
<% end %>
