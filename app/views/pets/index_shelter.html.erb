<h1>Adopt Don't Shop</h1><br>
<h5><%= link_to 'Back to All Shelters', '/shelters'%> <%= link_to 'Back to All Pets', '/pets'%><h5>
<h2>All pets in  <%= link_to "#{@shelter.name}", "/shelters/#{@shelter.id}" %></h2><br>
<br>
<% @pets.each do |pet| %>
  <br>
  <h2><%= link_to "#{pet.name}", "/pets/#{pet.id}" %></h2>
  <%= image_tag(pet.image, size: '200')%>
  <h3>Approximate Age: <%= pet.approximate_age %></h3>
  <h3>Desciption: <%= pet.description %></h3>
  <h3>Sex: <%= pet.sex %></h3>

  <h3><%= link_to 'Update Pet', "/pets/#{pet.id}/edit" %></h3>
  <h3><%= link_to "Delete #{pet.name}", "/pets/#{pet.id}", method: :delete %>
<% end %>
