<h1>Adopt Don't Shop</h1><br>
<h2>Add a Pet to the Shelter:</h2><br>
<%= form_tag "/shelters/#{@shelter_id}/pets" do %>
  <p><%= label_tag 'Image of Pet: ' %></p>
  <p><%= text_field_tag :image %></p>
  <p><%= label_tag 'Pet Name: ' %></p>
  <p><%= text_field_tag :name %></p>
  <p><%= label_tag 'Approximate Age: ' %></p>
  <p><%= text_field_tag :approximate_age %></p>
  <p><%= label_tag 'Sex of Pet: ' %></p>
  <p><%= text_field_tag :sex %></p>
  <p><%= label_tag 'Description of Pet: ' %></p>
  <p><%= text_field_tag :description %></p>

  <%= submit_tag 'Add Pet to Shelter' %>
<% end %>
