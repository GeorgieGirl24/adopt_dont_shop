<!DOCTYPE html>
<html>
  <head>
    <title>AdoptDontShop</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <h1><header id='main-header'>Adopt Don't Shop</header></h1>

    <% flash.each do |type, message| %>
      <div class="alert alert-info">
      <section class="<%= type %>">
        <p><%= message %></p>
      </section>
      </div>
    <% end %>
    <%= yield %>
  </body>
</html>
