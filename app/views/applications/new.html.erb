<h5>
  <%= link_to 'Back to All Shelters', '/shelters' %>
  <%= link_to 'Back to All Pets', '/pets' %>
</h5>

<h2>Enter your name:</h2><br>
<%= form_tag "/applications" do %>
  <p><%= label_tag 'Name: ' %></p>
  <p><%= text_field_tag :name %></p>
  <p><%= label_tag 'Description: ' %></p>
  <p><%= text_field_tag :description %></p>
  <%= hidden_field_tag :status, 'In Progress' %>

  <%= submit_tag 'Submit' %>
<% end %>
